@model AuctionSite.Models.SendEmail

    <partial name="_ToastrNotification" /> <!--Toaster Notifaction for succsefull email sent :)-->


    <div class="col-md-6 offset-md-3">
        <div class="border border-light bg-dark">
            <form method="post" asp-action="Contact">

                <div asp-validation-summary="ModelOnly "> </div>

                <div class="form-floating">
                    <input type="email" asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Email)" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input type="text" asp-for="Subject" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Subject)" />
                    <label asp-for="Subject"></label>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="text-light" asp-for="Message"></label>
                    <textarea rows="4" asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class='fas fa-envelope'></i> Send Message</button>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {<!--Validation scripts will trigger so in some cases there wont be need for any asking the server :)-->
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }