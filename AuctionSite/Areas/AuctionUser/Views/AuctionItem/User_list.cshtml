@model IEnumerable<AuctionSite.Models.AuctionItem>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">@Model.First().User.UserName Auctions</h2>
        </div>
    </div>

    <div class="row mt-2 gap-1">
        @foreach (var item in Model)
        {

            <partial name="_AuctionItemCard" model="@item" /> <!--Loading the Cards :)-->


        }
    </div>
</div>