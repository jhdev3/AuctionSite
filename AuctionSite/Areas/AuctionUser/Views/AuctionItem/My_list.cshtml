@model IEnumerable<AuctionSite.Models.AuctionItem>


<partial name="_ToastrNotification" /> <!--Toaster partial view so Tempdata Succsess errors shows :)-->


<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">My Auctions</h3>
        </div>
        <div class="col-6 text-end">
            <!--Button Trigger Modal-->
            <a asp-action="CreateEdit" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>
                Create Auction
            </a>
        </div>
    </div>

    <div class="row mt-2 gap-1">
        @foreach (var item in Model)
        {

            <partial name="_AuctionItemCard" model="@item" /> <!--Loading the Cards :)-->


        }
    </div>
</div>