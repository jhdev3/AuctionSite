@model IEnumerable<AuctionSite.Models.AuctionItem>

@{
    ViewData["Title"] = "Index";
}
<partial name="_ToastrNotification" /> <!--Toaster partial view so Tempdata Succsess errors shows :)-->

<h1>Auction Item Manager </h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingBid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="mb-3 mb-md-0">
                        @Html.DisplayFor(modelItem => item.Title)
                    </div>
                    <div class="d-md-none">
                        <!--Getting a somewhat responsive table design on small screens by adding the edit button under the title -->
                        <a asp-action="CreateEdit" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil"></i>  Edit</a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingBid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <div class="mb-3 mb-md-0">
                        @Html.DisplayFor(modelItem => item.DateOfCreation)
                    </div>
                    <div class="d-md-none">
                        <a onclick="Delete('/AuctionUser/AuctionItem/Delete/{@item.Id}')"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
                <td class="d-none d-md-block">
                    <!--Only shows on md-> Greater -->
                    <a asp-action="CreateEdit" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil"></i>  Edit</a> |
                    <a onclick="Delete('/AuctionUser/AuctionItem/Delete/{@item.Id}')"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
