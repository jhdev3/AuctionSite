@model IEnumerable<AuctionSite.Models.Category>


@{
    ViewData["Title"] = "Index";
}

<partial name="_ToasterPartial" />

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-square"></i>
                                                                Add Category </a>
        </div>
    </div>
</div>
<hr />
<table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>     
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.DateOfCreation
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>


<!-- Modal -->
<form asp-action="Create" asp-controller="ManagerCategory" method="POST" data-ajax="true" data-ajax-update="divCategory" data-ajax-success="OnSuccess">
    <div id="exampleModal" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Student Details Form</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="divCategory">
                        <div asp-validation-summary="All" class="text-danger"></div>  
                        <partial name="_CreatePartial" model="new Category()" />
                </div>
                <div class="modal-footer">
                    <input id="btnSubmit" type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
       @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
